<div>
  <div>
    <h1>
      List of all winners
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new winner
    </h2>

    <form action="/insert_winner" method="post">
      <div>
        <label for="seeker_id_box">
          Seeker
        </label>

        <input type="text" id="seeker_id_box" name="query_seeker_id">
      </div>

      <div>
        <label for="job_id_box">
          Job
        </label>

        <input type="text" id="job_id_box" name="query_job_id">
      </div>

      <button>
        Create winner
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Seeker
        </th>

        <th>
          Job
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_winners.each do |a_winner| %>
      <tr>
        <td>
          <%= a_winner.id %>
        </td>

        <td>
          <%= a_winner.seeker_id %>
        </td>

        <td>
          <%= a_winner.job_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_winner.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_winner.updated_at) %> ago
        </td>

        <td>
          <a href="/winners/<%= a_winner.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
