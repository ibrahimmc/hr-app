<div >
  <h5>
    Edit Seeker Account
  </h5>

  <div>
    <form action="/modify_seeker" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_seeker.email %>">
      </div>
      <div>
        <label for="first_name_box">First name</label>
        <input id="first_name_box" name="query_first_name" value="<%= @current_seeker.first_name %>">
      </div>
      <div>
        <label for="last_name_box">Last name</label>
        <input id="last_name_box" name="query_last_name" value="<%= @current_seeker.last_name %>">
      </div>
      <div>
        <label for="industry_box">Industry</label>
        <input id="industry_box" name="query_industry" value="<%= @current_seeker.industry %>">
      </div>
      <div>
        <label for="years_of_exp_box">Years of exp</label>
        <input id="years_of_exp_box" name="query_years_of_exp" value="<%= @current_seeker.years_of_exp %>">
      </div>
      <div>
        <label for="bid_points_box">Bid points</label>
        <input id="bid_points_box" name="query_bid_points" value="<%= @current_seeker.bid_points %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
