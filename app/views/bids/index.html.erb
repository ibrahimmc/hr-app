<div>
  <div>
    <h1>
      List of all bids
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new bid
    </h2>

    <form action="/insert_bid" method="post">
      <div>
        <label for="job_seeker_id_box">
          Job seeker
        </label>

        <input type="text" id="job_seeker_id_box" name="query_job_seeker_id">
      </div>

      <div>
        <label for="job_id_box">
          Job
        </label>

        <input type="text" id="job_id_box" name="query_job_id">
      </div>

      <div>
        <label for="points_bid_box">
          Points bid
        </label>

        <input type="text" id="points_bid_box" name="query_points_bid">
      </div>

      <button>
        Create bid
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Job seeker
        </th>

        <th>
          Job
        </th>

        <th>
          Points bid
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bids.each do |a_bid| %>
      <tr>
        <td>
          <%= a_bid.id %>
        </td>

        <td>
          <%= a_bid.job_seeker_id %>
        </td>

        <td>
          <%= a_bid.job_id %>
        </td>

        <td>
          <%= a_bid.points_bid %>
        </td>

        <td>
          <%= time_ago_in_words(a_bid.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bid.updated_at) %> ago
        </td>

        <td>
          <a href="/bids/<%= a_bid.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
